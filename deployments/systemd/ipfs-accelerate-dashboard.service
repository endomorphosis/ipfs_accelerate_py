[Unit]
Description=IPFS Accelerate Performance Dashboard
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=devel
WorkingDirectory=%h/ipfs_accelerate_py
Environment=PORT=8080
ExecStart=/bin/bash -lc '/bin/bash %h/ipfs_accelerate_py/tools/run_dashboard.sh'
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
