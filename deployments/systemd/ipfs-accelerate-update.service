[Unit]
Description=IPFS Accelerate Auto-Update Service
Documentation=https://github.com/endomorphosis/ipfs_accelerate_py

[Service]
Type=oneshot
User=devel
Group=devel
WorkingDirectory=%h/ipfs_accelerate_py
ExecStart=/bin/bash %h/ipfs_accelerate_py/scripts/setup/update-and-restart.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ipfs-accelerate-update
